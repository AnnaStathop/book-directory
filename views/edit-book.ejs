<%- include('header')-%>

<div class="text-center center-div" id="login">
  <div class="container">
    <div class="title">
      <h2>Edit Book</h2>
    </div>

    <form method="post">
      <div class="input_field">
        <input
          type="text"
          required
          class="form-param"
          placeholder="New Book Title"
          name="title"
          value="<%= bookTitle %>"
        />
      </div>
      <div class="input_field">
        <input
          type="text"
          required
          class="form-param"
          placeholder="New Book Author"
          name="author"
          value="<%= bookAuthor %>"
        />
      </div>

      <button type="submit" method="POST" class="btn_edit">Save</button>
      <a class="btn_edit" href="/books/all-books">Cancel</a>
    </form>
  </div>
</div>
<%- include('footer')-%>
